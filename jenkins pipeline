pipeline {
    agent any
    
    environment {
        SCANNER_HOME = tool 'sonar-scanner' 
    }

    stages {
        stage('Git Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/aaryangupta/Valentine-Devops-Project'
            }
        }
    
        stage('Trivy check code') {
            steps {
                sh 'trivy fs --format table -o trivy_report.html .'
            }
        }

        stage('Sonarqube analysis') {
            steps {
                withSonarQubeEnv('sonar') {
                    sh '$SCANNER_HOME/bin/sonar-scanner -Dsonar.projectKey=aaryan -Dsonar.projectName=aaryan '

                }
            }
        }

        stage('Docker build') {
            steps {
                script {
                    withDockerRegistry(credentialsId: 'docker-cred', toolName: 'docker') {
                        sh 'docker build -t aaryan22/valantine:v1 .'
                    }
                }
            }
        }

        stage('Trivy image scan') {
            steps {
                sh 'trivy image --format json -o trivy_image_report.json aaryan22/valantine:v1'
            }
        }
        
        stage('Docker push') {
            steps {
                sh 'docker push aaryan22/valantine:v1'
            }
        }

        stage('Container creation') {
            steps {
                sh 'docker run -d -p 8081:80 aaryan22/valantine:v1'
            }
        }
    }
}
